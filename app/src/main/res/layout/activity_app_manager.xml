<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppManager"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_WelcomeMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Choose an Option"
        android:textAlignment="center"
        android:textSize="36dp" />
    <Button
        android:id="@+id/btn_viewPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="viewPatient"
        android:text="LIST OF PATIENTS"
        />
    <Button
        android:id="@+id/btn_AddPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="newPatient"
        android:text="ADD PATIENT"
        />
    <Button
        android:id="@+id/btn_UpdatePatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="updatePatient"
        android:text="UPDATE PATIENT"
        />

    <Button
        android:id="@+id/btn_AddTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="addTest"
        android:text="ADD TEST"
        />

</LinearLayout>